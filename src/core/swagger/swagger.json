        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "token"
          },
          "userId": {
            "type": "string",
            "example": "uuid"
          },
          "type": {
            "type": "string",
            "example": "refresh or access"
          },
          "service": {
            "type": "string",
            "example": "google"
          }
        }
      },
      "updateToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "new Token"
          }
        }
      },
