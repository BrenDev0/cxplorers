        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "email"
          },
          "password": {
            "type": "string",
            "example": "password"
          },
          "name": {
            "type": "string",
            "example": "name"
          },
          "phone": {
            "type": "string",
            "example": "phone number"
          },
          "code": {
            "type": "string",
            "example": "code from users email"
          }
        }
      },
      "updateUser": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string",
            "example": "phone"
          },
          "name": {
            "type": "string",
            "example": "name"
          },
          "password": {
            "type": "string",
            "example": "new passoword"
          },
